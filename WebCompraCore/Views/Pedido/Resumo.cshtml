@{
    ViewData["title"] = "Resumo";
};

@model WebCompraCore.Models.ViewModels.CarrinhoViewModel

<h3>Resumo do Pedido</h3>

<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">
                <h3>Nº Pedido: 12345678</h3>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-3">
                <h3>Seus dados</h3>
                <div>João da Silva</div>
                <div>Telefone (21) 9996667</div>
            </div>

            <div class="col-md-3">
                Joao@teste.com.br
            </div>
            <div class="col-md-6">
                <h3>Endereço de entrega</h3>
                <div>Rua do jonas n 1234</div>
            </div>
        </div>
        <hr />

        <div class="row">
            <div class="col-md-10">
                <h3>Item</h3>
            </div>
            <div class="col-md-2">
                <h3>Quantidade</h3>
            </div>

        </div>
        @foreach (var item in Model.Itens)
    {

        <div class="row">
            <div class="col-md-10">
                <div>@item.Produto.Nome</div>
            </div>
            <div class="col-md-2">
                <div class="pull-right">@item.Quantidade</div>
            </div>

        </div>
}
    </div>
</div>